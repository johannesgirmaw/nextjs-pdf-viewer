{
  "name": "nextjs-pdf-viewer",
  "version": "0.1.0",
  "description": "World-class PDF viewer with smooth rendering and search functionality.",
  "license": "MIT",
  "author": "Yohannes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannesgirmaw/nextjs-pdf-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/johannesgirmaw/nextjs-pdf-viewer/issues"
  },
  "homepage": "https://github.com/johannesgirmaw/nextjs-pdf-viewer#readme",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./web-component": {
      "types": "./dist/web-component/index.d.ts",
      "import": "./dist/web-component/index.js",
      "require": "./dist/web-component/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsup --watch --onSuccess \"echo Build succeeded\""
  },
  "keywords": [
    "pdf",
    "viewer",
    "search",
    "web-component",
    "pdf.js",
    "typescript"
  ],
  "dependencies": {
    "pdfjs-dist": "^4.6.82"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
